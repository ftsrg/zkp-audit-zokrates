type Account = u32[5];  /* addresses are 160 bits -> 5 x 32 */
type Balance = u32[8];  /* 8 x 32 = 256 bits of balance */
type Hash = u32[8];     /* 256 bits for SHA256 */
type AccountBalance = (Account, Balance);

struct Transaction {
	Account         source;
	Account         destination;
	Balance         amount;
}

struct Block<M> {
	Hash            prev_hash;
	Transaction[M]  transactions;
	u32             n_transactions;
}
